{% extends 'NSAdminBundle:Section:settings.html.twig' %}

{% block content_header %}
    <h3>Серверы</h3>
{% endblock %}

{% block content_content %}
    <a href="{{ url('ns_admin_bundle', { adminBundle: 'NSDeployBundle', adminController: 'servers', adminAction: 'form'}) }}" class="btn"><i class="icon-plus"></i>&nbsp;Добавить сервер</a>

    {% if servers %}
        <table class="table table-striped table-hover">
            <thead>
            <tr>
                <th style="width:250px">Название</th>
                <th style="width:100px">Хост</th>
                <th style="width:100px">Имя пользователя</th>
                <th>&nbsp;</th>
                <th style="width:100px;text-align: right;">Операции</th>
            </tr>
            </thead>
            <tbody>
            {% for server in servers %}
                <tr>
                    <td><i class="icon-file"></i>&nbsp;{{ server.title }}</td>
                    <td>{{ server.host }}</td>
                    <td>{{ server.user }}</td>
                    <td></td>
                    <td style="text-align: right">
                        <div class="btn-group">
                            <a href="{{ url('ns_admin_bundle', { adminBundle: 'NSDeployBundle', adminController: 'servers', adminAction: 'form'}) }}?id={{ server.id }}" class="btn btn-mini"><i class="icon-pencil"></i></a>
                            <a href="{{ url('ns_admin_bundle', { adminBundle: 'NSDeployBundle', adminController: 'servers', adminAction: 'delete'}) }}?id={{ server.id }}" class="btn btn-mini ns-confirm"><i class="icon-trash"></i></a>
                        </div>
                    </td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
    {% endif %}
{% endblock %}